<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class ="title">Vinculaciones</h2>
  <% if @curr_user.admin%>
    <%= link_to 'Nueva Vinculación', new_link_path, class: "btn btn-primary" %>
  <% end %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">Nombre</th>
        <th class="text-center table-hidde">Descripción</th>
        <th class="text-center table-hidde">Participantes</th>
        <th class="text-center table-hidde">Fecha de Inicio</th>
        <th class="text-center table-hidde">Fecha de Cierre</th>
        <th class="text-center table-hidde">Tipo</th>
        <th class="text-center table-hidde">URL</th>
        <th colspan="3" class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td class="text-center"><%= link.name %></td>
          <td class="text-center table-hidde"><%= link.description %></td>
          <td class="text-center table-hidde"><%= link.participants %></td>
          <td class="text-center table-hidde"><%= link.start_date %></td>
          <td class="text-center table-hidde"><%= link.end_date %></td>
          <td class="text-center table-hidde"><%= link.link_type %></td>
          <td class="text-center table-hidde"><%= link.url %></td>
          <td class="text-center">
            <%= link_to link do %>
              <i class="btn fas fa-eye fa-sm text-primary" aria-hidden="true"></i>
            <%end%>
          </td>
          <td class="text-center">
            <%= link_to edit_link_path(link) do %>
              <i class="btn fas fa-edit fa-sm text-primary" aria-hidden="true"></i>
            <%end%>
          </td>
          <td class="text-center">
            <%= link_to link, method: :delete, data: { confirm: 'Esta Seguro?' } do%>
              <i class="btn fa fa-trash-alt fa-sm text-danger" aria-hidden="true"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

