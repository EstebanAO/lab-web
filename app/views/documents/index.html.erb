<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8" />
    <title>Cursos</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  </head>

  <body>
    <div id="wrapper">
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row margin-row">
            <div class="col-lg-8"></div>
          </div>
          <div class="row">
            <h2>Documentos</h2>
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="pull-left">
                  <% if !@curr_user.admin %>
                    <%= link_to 'New Document', new_document_path %>
                  <% end %>
                  </div>
                  <!-- /Select -->
                  <!-- Table -->

                  <table class="table table-striped table-bordered">
                    <thead>
                       <tr>
                        <th>Description</th>
                        <th>Url</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @documents.each do |document| %>
                        <tr>
                          <td><%= document.description %></td>
                          <td><%= document.url %></td>
                          <td><%= link_to 'Show', document %></td>
                          <td><%= link_to 'Edit', edit_document_path(document) %></td>
                          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
              </div>
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- JAVASCRIPT -->
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
      crossorigin="anonymous"></script>
    <script type="text/javascript" src="./../../../js/patient-dashboard.js"></script>

  </body>

</html>
