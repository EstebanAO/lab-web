<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class ="title">Documentos</h2>
  <% if !@curr_user.admin %>
    <%= link_to 'Nuevo Documento', new_document_path, class: "btn btn-primary" %>
  <% end %>
  <table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th>Descripci√≥n</th>
        <th>URL</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.description %></td>
          <td><%= document.url %></td>
          <td><%= link_to 'Mostrar', document %></td>
          <td><%= link_to 'Editar', edit_document_path(document) %></td>
          <td><%= link_to 'Borrar', document, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
