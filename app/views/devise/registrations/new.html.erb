<div class="container">
  <%= form_for(resource, html:{ class:"form" },as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2  class="form-heading">Registro</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-fields">
      <%= f.label :correo %><br />
      <%= f.email_field :email, class:"form-control" ,placeholder: "Correo" , autofocus: true, autocomplete: "email" %>

      <%= f.label :contraseña %>
      <% if @minimum_password_length %>
      <em style="font-size: 15px;">(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control" , placeholder: "Contraseña" , autocomplete: "new-password" %>
    
      <%= f.label :Confirmar_Contraseña %><br />
      <%= f.password_field :password_confirmation,  class:"form-control",placeholder: "Confirmar Contraseña" , autocomplete: "new-password" %>
    </div>

    <%= f.submit "Registrarse", class:"btn btn-lg btn-primary btn-block" %>
    <%= render "devise/shared/links" %> 
  <% end %>
</div>