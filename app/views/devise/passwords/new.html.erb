<div class="container">
  <%= form_for(resource, html:{ class:"form" }, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="form-heading">¿Olvidaste tu contraseña?</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-fields">
      <%= f.label :correo %><br />
      <%= f.email_field :email,  class:"form-control",placeholder: "Correo",autofocus: true, autocomplete: "email" %>
    
      <%= f.submit "Mandar instrucciones", class:"btn btn-lg btn-primary btn-block"%>
    </div>
     <%= render "devise/shared/links" %>
  <% end %>
</div>