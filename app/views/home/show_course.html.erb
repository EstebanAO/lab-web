<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class="title">Lista de Materias</h2>
    <div class="search-bar">
      <%= form_tag(show_course_path, method: :get) do %>
        <%= text_field_tag :search %>
        <%= select_tag :status,"<option>Todas</option><option>Activas</option><option>Inactivas</option>".html_safe %>
        <%= submit_tag "Buscar",:class=>"btn btn-outline-secondary" %>
      <% end %>
    </div>
    <% if @courses.count == 0 %>
      <div>
        <p class="find_error_message">No hay cursos con esas caracteristicas.</p>
      </div>
    <% end %>
  <div class="cards">
    <% @courses.each do |course| %>
        <div class="card">
         <%= link_to home_courses_path(course.id) do %>
            <div class="card__inner">
              <i class="fas fa-book"></i>
              <p><%= course.name %></p>
            </div>
          <%end%>
        </div>
    <%end%>
  </div>
</div>