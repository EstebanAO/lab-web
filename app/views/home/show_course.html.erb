<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class="title">Lista de cursos</h2>
    <div class="search-bar">
      <%= form_tag(show_course_path, method: :get) do %>
        <%= text_field_tag :search %>
        <%= select_tag :status,"<option>Activo</option><option>No activo</option>".html_safe %>
        <%= submit_tag "Buscar",:class=>"btn btn-outline-secondary" %>
      <% end %>
    </div>
  <div class="cards">
    <% @courses.each do |courses| %>
        <div class="card">
         <%= link_to home_courses_path(course.id) do %>
            <div class="card__inner">
              <i class="fa fa-user-tie"></i>
              <p><%= course.name %></p>
            </div>
          <%end%>
        </div>
    <%end%>
  </div>
</div>