<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class="title">Lista de Vinculaciones</h2>
    <div class="search-bar">
      <%= form_tag(show_link_path, method: :get) do %>
        <%= text_field_tag :search %>
        <%= select_tag :status,"<option>Todas</option><option>Internas</option><option>Externas</option>".html_safe %>
        <%= submit_tag "Buscar",:class=>"btn btn-outline-secondary" %>
      <% end %>
    </div>
    <% if @links.count == 0 %>
      <div>
        <p class="find_error_message">No hay vinculaciones con esas caracteristicas.</p>
      </div>
    <% end %>
  <div class="cards">
    <% @links.each do |link| %>
        <div class="card">
         <%= link_to home_links_path(link.id) do %>
            <div class="card__inner">
              <i class="fas fa-project-diagram"></i>
              <p><%= link.name %></p>
            </div>
          <%end%>
        </div>
    <%end%>
  </div>
</div>