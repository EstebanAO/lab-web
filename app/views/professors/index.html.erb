<div class="container">
  <p id="notice"><%= notice %></p>
  <h2 class ="title">Profesores</h2>
  <% if @curr_user.admin%>
    <%= link_to 'Nuevo Profesor', new_professor_path, class: "btn btn-primary" %>
  <% end %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Oficina</th>
        <th>Resumen</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @professors.each do |professor| %>
        <tr>
          <td><%= professor.name %> <%= professor.father_last_name %> <%= professor.mother_last_name %></td>
          <td><%= professor.email %></td>
          <td><%= professor.office %></td>
          <td><%= professor.resume %></td>
          <td><%= link_to 'Mostrar', professor %></td>
          <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
          <td><%= link_to 'Borrar', professor, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
