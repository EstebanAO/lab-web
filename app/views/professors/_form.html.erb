<div class="container">
  <%= form_with( html:{ class:"form" } ,model: professor, local: true) do |form| %>
    <% if professor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(professor.errors.count, "error") %> prohibited this professor from being saved:</h2>

        <ul>
        <% professor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :Nombre %>
      <%= form.text_field :name, class:"form-control" , placeholder: "Nombre"  %>
    </div>

    <div class="form-group">
      <%= form.label :Apellido_Paterno %>
      <%= form.text_field :father_last_name, class:"form-control" , placeholder: "Apellido Paterno" %>
    </div>

    <div class="form-group">
      <%= form.label :Apellido_Materno %>
      <%= form.text_field :mother_last_name, class:"form-control" , placeholder: "Apellido Materno" %>
    </div>

    <div class="form-group">
      <%= form.label :Correo %>
      <%= form.text_field :email, class:"form-control" , placeholder: "Correo" %>
    </div>

    <div class="form-group">
      <%= form.label :Oficina %>
      <%= form.text_field :office, class:"form-control" , placeholder: "Oficina" %>
    </div>

    <div class="form-group">
      <%= form.label :CV %>
      <%= form.text_field :resume, class:"form-control" , placeholder: "CV" %>
    </div>

    <div class="form-group">
      <%= form.label :Tipo_de_Profesor %>
      <%= form.select :professor_type, ['Planta', 'Catedra'] , class:"form-control"%>
    </div>

    <div class="actions">
      <%= form.submit 'Guardar', :class => 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
</div>

